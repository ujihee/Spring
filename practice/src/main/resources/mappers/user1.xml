<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.practice.mapper.User1Mapper">
    <insert id="insert">
        INSERT INTO USER1 VALUES (#{user_id}, #{name}, #{hp}, #{age})
    </insert>

    <select id="selectAll" resultType="kr.co.practice.dto.User1DTO">
        select * from USER1
    </select>

    <select id="select" resultType="kr.co.practice.dto.User1DTO">
        select * from USER1 where user_id=#{user_id}
    </select>

    <update id="update">
        UPDATE USER1 SET name=#{name}, hp=#{hp}, age=#{age} where user_id=#{user_id}
    </update>

    <delete id="delete">
        DELETE FROM USER1 WHERE user_id=#{user_id}
    </delete>
</mapper>